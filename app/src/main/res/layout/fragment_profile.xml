    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    style="@style/StyleBackground"
    tools:context=".activies.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBg"
        android:orientation="vertical">

        <include layout="@layout/include_profile_header" />

        <include layout="@layout/include_profile_content" />

        <include layout="@layout/include_profile_add_children" />

    </LinearLayout>
</ScrollView>