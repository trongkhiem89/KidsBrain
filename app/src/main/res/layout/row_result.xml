<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="@dimen/card_radius"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_top"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:minLines="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            tools:text="Password" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cateName"
            android:paddingEnd="@dimen/activity_vertical_margin_content"
            android:paddingLeft="@dimen/activity_vertical_margin_content"
            android:paddingRight="@dimen/activity_vertical_margin_content"
            android:paddingStart="@dimen/activity_vertical_margin_content"
            android:paddingTop="@dimen/activity_vertical_margin_content"
            tools:text="Điểm: 10" />

        <TextView
            android:id="@+id/recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score"
            android:padding="@dimen/activity_vertical_margin_content"
            tools:text="* Quan tâm đến nội dung con chưa làm được, hỗ trợ con 3lần/ngày và đánh giá lại sau 1 tháng hỗ trợ. Nếu tiến triển chậm hoặc không tiến triển cần xin tư vấn chuyên gia" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
