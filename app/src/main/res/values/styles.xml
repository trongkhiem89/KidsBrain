<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textAllCaps">false</item>
        <item name="android:actionMenuTextColor">@color/colorMenuItem</item>
        <item name="actionMenuTextColor">@color/colorMenuItem</item>
        <!--<item name="colorControlActivated">@color/colorWhite</item>-->
        <!--<item name="colorControlNormal">@color/colorWhite</item>-->
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/colorBg</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccentDialog</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="StyleBackground">
        <item name="android:background">@drawable/shape_background</item>
    </style>


    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="MatchParentWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StyleTextIntro" parent="MatchParentWidth">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorIntroduce</item>
        <item name="android:textSize">@dimen/font_size_intro</item>
    </style>

    <!--Tiêu đề của Input-->
    <style name="StyleInputLabel" parent="WrapContent">
        <item name="android:textColor">@color/inputLabelColor</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <!--Input text-->
    <style name="StyleInputText" parent="MatchParentWidth">
        <item name="android:layout_marginTop">@dimen/input_margin</item>
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <!--Nhãn-->
    <style name="StyleTitleLabel" parent="StyleInputLabel">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>

    <!--Chữ bình thường-->
    <style name="StyleLabel" parent="StyleInputLabel">
        <item name="android:textSize">@dimen/font_size_normal</item>
    </style>

    <!--Icon with text-->
    <style name="StyleIconSmall">
        <item name="android:layout_width">@dimen/icon_size_small</item>
        <item name="android:layout_height">@dimen/icon_size_small</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="StyleSettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_slide_menu</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="StyleSettingItemIcon">
        <item name="android:layout_width">@dimen/icon_slide_menu</item>
        <item name="android:layout_height">@dimen/icon_slide_menu</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:padding">@dimen/nav_header_vertical_spacing</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


</resources>
